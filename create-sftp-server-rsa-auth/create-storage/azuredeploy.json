{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "defaultValue": "STG",
            "allowedValues": [
                "PROD",
                "STG",
                "DEV"
            ],
            "metadata": {
                "description": "Deployment environment"
            }
        },
        "storageAccountNamePrefix": {
            "type": "string",
            "defaultValue": "sftp",
            "metadata": {
                "description": "Storage account name prefix"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS"
            ],
            "metadata": {
                "description": "Storage account type"
            }
        },
        "fileShareName": {
            "type": "string",
            "defaultValue": "sftpfileshare",
            "metadata": {
                "description": "Name of file share to be created"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Primary location for resources"
            }
        },
        "resourceTags": {
            "type": "object",
            "defaultValue": {
                "environment": "[parameters('environment')]",
                "Owner": "ITOps",
                "service": "sftp"
            },
            "metadata": {
                "description": "Resource tags for management"
            }
        }
    },
    "variables": {
        "storageAccountName": "[concat(parameters('storageAccountNamePrefix'), toLower(parameters('environment')) , substring(uniqueString(resourceGroup().id), 0, 4))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2019-06-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "kind": "StorageV2",
            "properties": {},
            "tags": "[parameters('resourceTags')]"
        },
        {
            "name": "[concat(variables('storageAccountName'), '/default/', parameters('fileShareName'))]",
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-06-01",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
                "[variables('storageAccountName')]"
            ]
        },
        {
            "name": "[concat(variables('storageAccountName'), '/default/sshauth')]",
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-06-01",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
            ]
        },
        {
            "name": "[concat(variables('storageAccountName'), '/default/sshkey')]",
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-06-01",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
            ]
        }
    ],
    "outputs": {
        "existingStgAcctName": {
            "type": "string",
            "value": "[variables('storageAccountName')]"
        },
        "existingStgAcctRGName": {
            "type": "string",
            "value": "[resourceGroup().name]"
        }
    }
}